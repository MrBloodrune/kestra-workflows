# Database Configuration
DB_HOST=postgres-db01
DB_PORT=5432
DB_NAME=mydatabase
DB_USER=postgres
DB_PASSWORD=postgrespass

# Container Names
DB_CONTAINER_NAME=postgres-db01
VECTORIZER_CONTAINER_NAME=vectorizer-worker
OLLAMA_CONTAINER_NAME=ollama-service
KESTRA_CONTAINER_NAME=kestra
PGADMIN_CONTAINER_NAME=pgadmin

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=pgadminpass
PGADMIN_PORT=5050

# Kestra Configuration
KESTRA_USERNAME=admin@kestra.io
KESTRA_PASSWORD=kestrapass
KESTRA_PORT=8080
KESTRA_WEBSERVER_PORT=8081

# Kestra Git Integration
KESTRA_GIT_URL=https://github.com/MrBloodrune/kestra-workflows
KESTRA_GIT_USERNAME=your-github-username
KESTRA_GIT_TOKEN=your-github-token
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-personal-access-token
WEBHOOK_KEY=your-webhook-secret-key

# Vectorizer Configuration
PGAI_VECTORIZER_WORKER_DB_URL=postgres://postgres:postgrespass@postgres-db01:5432/mydatabase

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
OLLAMA_API_KEY=ollama
OLLAMA_MODEL=llama2:latest
OLLAMA_HOST=http://ollama-service:11434
AI_PROVIDER=ollama  # Can be 'openai' or 'ollama'

# Path Configuration
PYTHONPATH=/app

# Kestra Storage Configuration
KESTRA_STORAGE_TYPE=local
KESTRA_STORAGE_PATH=/app/storage

# Kestra Queue Configuration
KESTRA_QUEUE_TYPE=postgres
KESTRA_QUEUE_POSTGRES_PREFIX=kestra_
KESTRA_QUEUE_POLL_INTERVAL=500

# Kestra Repository Configuration
KESTRA_REPOSITORY_TYPE=postgres
KESTRA_REPOSITORY_POSTGRES_PREFIX=kestra_

# Kestra Flow Configuration
KESTRA_FLOW_STORAGE_TYPE=postgres
KESTRA_FLOW_DEFAULT_NAMESPACE=dev